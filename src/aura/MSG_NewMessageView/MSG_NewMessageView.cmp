<aura:component controller="MSGDirectMessageUtil" access="global">
    
	<!-- aura attributes -->
	<aura:attribute name="selectedAccountLookUpRecords" type="sObject" default="{}" />
	<aura:attribute name="selectedUserLookUpRecords" type="sObject" default="{}" />
	<aura:attribute name="newMessageBody" type="String" />
	<aura:attribute name="subjectValue" type="String" />
	<aura:attribute name="isOpenNewMsg" type="boolean" default="false" />
	<aura:attribute name="attachId" type="String"></aura:attribute>
	<aura:attribute name="fileName" type="String" default="No File Selected.." />
	<aura:attribute name="accept" type="List" default="['.pdf', '.zip','.txt']" />
	<aura:attribute name="multiple" type="Boolean" default="true" />
	<aura:attribute name="markDirectMsgWrapper" type="MSGDirectMessageWrapper[]" />
	<aura:attribute name="unMarkedDirectMsgWrapper" type="MSGDirectMessageWrapper[]" />
    
	<aura:attribute name="allDirectMsgWrapper" type="MSGDirectMessageWrapper[]" />
	<aura:attribute name="FullDirectMsgWrapper" type="MSGDirectMessageWrapper[]" />
	<aura:attribute name="isSpinnerHide" type="Boolean" default="true" />
	<aura:attribute name="parent" type="Aura.Component" required="true" />
	<!-- end aura attributes -->
    
	<!--MODAL BOX Start -->
	<section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
		<div class="slds-modal__container">
			<!--  MODAL BOX HEADER Start -->
			<header class="slds-modal__header">
				<lightning:buttonIcon iconName="utility:close" onclick="{! c.closeModel }" alternativeText="close" variant="bare-inverse" class="slds-modal__close" />
				<h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">New Message</h2> </header>
			<!-- MODAL BOX BODY Part Start -->
			<div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1" style="height:30rem;">
				<c:MSG_ReUsableMultiSelectLookup objectAPIName="Account" IconName="standard:account" lstSelectedRecords="{!v.selectedAccountLookUpRecords}" label="Family" />
				<c:MSG_ReUsableMultiSelectLookup objectAPIName="User" IconName="standard:account" lstSelectedRecords="{!v.selectedUserLookUpRecords}" label="To" />
				<lightning:input name="input3" value="{!v.subjectValue}" placeholder="Type here..." label="Subject" />
				<br/>
				<label class="uiLabel-left form-element__label uiLabel" data-aura-class="uiLabel"><span class="">Message</span></label>
				<lightning:inputRichText value="{!v.newMessageBody}" placeholder="Type something interesting" shareWithEntityId="{!v.recordId}">
					<lightning:insertImageButton/></lightning:inputRichText>

                <lightning:fileUpload label="Attachment" name="fileUploader" multiple="true" accept="{!v.filetype}" recordId="{!v.recordId}" onuploadfinished="{!c.handleUploadFinishedNew}" />
                <div class="slds-text-body_small slds-text-color_error">{!v.fileName} </div>
			</div>
			<!-- MODAL BOX FOOTER Part Start -->
			<footer class="slds-modal__footer">
				<lightning:button variant="brand" label="Send" title="Send" onclick="{! c.sendFirstMessage}" />
				<lightning:button variant="brand" label="Cancel" title="Cancel" onclick="{!c.closeModel}" /> </footer>
		</div>
	</section>
	<div class="slds-backdrop slds-backdrop_open"></div>
	<!--MODAL BOX Part END Here -->
</aura:component>