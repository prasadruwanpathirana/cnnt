<aura:component controller="DirectMessageUtil" access="global" >
    <aura:attribute name="selectedMsgWrapper" type="DirectMessageWrapper" />
     <aura:attribute name="selectedFeedIdValue" type="String"/>
    <aura:attribute name="replyValue" type="String"/>
    <aura:attribute name="attachId" type="String" />
    <aura:attribute name="fileName" type="String" default="No File Selected.." />
    <aura:attribute name="accept" type="List" default="['.pdf', '.zip','.txt']"/>
    <aura:attribute name="multiple" type="Boolean" default="true"/>
    <aura:attribute name="isSpinnerHide" type="Boolean" default="true" />
    <aura:attribute name="userIdValue" type="String"/>
    <aura:attribute name="directMsgWrapper" type="DirectMessageWrapper[]"></aura:attribute><!--Added by sameera-->
     <lightning:workspaceAPI aura:id="workspace" />
    <span>
       <!--<lightning:spinner  alternativeText="Loading" size="medium" variant="brand" 
                                   class="{!v.isSpinnerHide == true ? 'slds-hide' : '' }" />-->
       <!-- <lightning:spinner aura:id="Spinner" alternativeText="Loading" size="medium" variant="brand" 
                                   class="slds-hide spinnerX" /> -->
                 <lightning:spinner  alternativeText="Loading" size="medium" variant="brand" 
                                   class="{!v.isSpinnerHide == true ? 'slds-hide spinnerX' : 'spinnerX' }" />
                <div class="slds-border_bottom" >
                    <div class="">                            
                        <section role="log" class="slds-chat ">
                            <ul class="">
                                <div class="slds-grid slds-wrap">
                                    <div class="slds-col slds-size_1-of-1 slds-large-size_8-of-12">
                                        <span>
                                            <div style=" font-size: 20px;">
                                                <a href="" onclick="{!c.newwin}"><b>{!v.selectedMsgWrapper.flMessage.accountName}</b></a> - <strong>{!v.selectedMsgWrapper.directMssageSubject}</strong>
                                            </div>
                                            <span>                                        
                                                <div class="slds-float_left">                                          
                                                    From : <a><b>{!v.selectedMsgWrapper.directMessageFeed.initatedUser.userFirstName + ' '+v.selectedMsgWrapper.directMessageFeed.initatedUser.userLastName }</b></a>,<lightning:formattedDateTime value="{!v.selectedMsgWrapper.directMessageFeed.directMessageFeedCreatedDateTime}" year="numeric" month="numeric" day="numeric" hour="2-digit"
                                                                                                                                                                                                                                                   minute="2-digit" hour12="true"/>
                                                    <div>
                                                        To: &nbsp;
                                                        <aura:iteration items="{!v.selectedMsgWrapper.lstDirectMessageUsers}" var="user" indexVar="index" >
                                                            <aura:if isTrue="{!user.userId != v.userIdValue}">                                                       
                                                                <!-- <a>{!user.userFirstName + ' ' +user.userLastName}<aura:if isTrue="{!notequals(if(equals(index,0),add(index,1),index),sub(v.messageDetail.actorDetail.length,1))}">,</aura:if></a> -->
                                                                <a>{!user.userFirstName + ' ' +user.userLastName}  <aura:if isTrue="{!!greaterthanorequal( !v.selectedMsgWrapper.lstDirectMessageUsers.length, !index )}">,</aura:if></a>
                                                            </aura:if>
                                                        </aura:iteration>
                                                    </div>                                            
                                                </div>
                                            </span> 
                                            <!--   <lightning:input style="position:relative; top:-67px;" type="toggle"  aura:id="{!v.selectedMsgWrapper.flMessage.feedId}"
                                                         messageToggleActive="Marked" messageToggleInactive="Unmarked" checked= "{!v.selectedMsgWrapper.flMessage.marked}"
                                                         onchange="{!c.getToggleButtonValue}" value="{!v.selectedMsgWrapper.flMessage.feedId}" >
                                        </lightning:input> -->
                                        </span>
                                    </div>
                                    <div class="slds-col slds-size_1-of-1 slds-large-size_4-of-12">
                                        <div class="slds-float_right"> 
                                            <lightning:input style="position:relative;" type="toggle"  aura:id="{!v.selectedMsgWrapper.flMessage.feedId}"
                                                             messageToggleActive="Marked" messageToggleInactive="Unmarked" checked= "{!v.selectedMsgWrapper.flMessage.marked}" 
                                                             onchange="{!c.getToggleButtonValue}" value="{!v.selectedMsgWrapper.flMessage.marked}" >
                                            </lightning:input>
                                        </div>
                                    </div>
                                </div>
                                
                                
                                <div class="slds-scrollable_y slds-border_top" style="height:21rem;">
                                    <li class="slds-chat-listitem slds-chat-listitem_inbound">
                                                <div class="slds-chat-message">
                                                    <div class="slds-chat-message__body">
                                                        <div class="slds-chat-message__text slds-chat-message__text_inbound">
                                                            <span><lightning:formattedRichText value="{!v.selectedMsgWrapper.directMessageFeed.directMessageFeedBody}"/></span>
                                                        </div>
                                                        <div class="slds-chat-message__meta" aria-label="said Andy Martinez at 4:59 PM">
                                                            {!v.selectedMsgWrapper.directMessageFeed.initatedUser.userFirstName} • {!v.selectedMsgWrapper.directMessageFeed.initatedUser.userLastName} • <lightning:formattedDateTime value="{!v.selectedMsgWrapper.directMessageFeed.directMessageFeedCreatedDateTime}" year="numeric" month="numeric" day="numeric" hour="2-digit"
                                            minute="2-digit" hour12="true"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                    <aura:iteration items="{!v.selectedMsgWrapper.directMessageFeed.directFeedComments}" var="message" indexVar="array" >
                                        <aura:if isTrue="{!message.commentedUserID == v.userIdValue}">
                                            <li class="slds-chat-listitem slds-chat-listitem_outbound">
                                                <div class="slds-chat-message">
                                                    <div class="slds-chat-message__body">
                                                        <div class="slds-chat-message__text slds-chat-message__text_outbound">
                                                            <span><lightning:formattedRichText value="{!message.commentBody}"/></span>
                                                        </div>
                                                        <div class="slds-chat-message__meta" aria-label="said Andy Martinez at 4:59 PM">
                                                            {!message.commentedUserFirstName} • {!message.commentedUserLastName} • <lightning:formattedDateTime value="{!message.commentCreatedDateTime}" year="numeric" month="numeric" day="numeric" hour="2-digit"
                                            minute="2-digit" hour12="true"/>
                                                            
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                        </aura:if>
                                        <aura:if isTrue="{!message.commentedUserID != v.userIdValue}">
                                            <li class="slds-chat-listitem slds-chat-listitem_inbound">
                                                <div class="slds-chat-message">
                                                    <div class="slds-chat-message__body">
                                                        <div class="slds-chat-message__text slds-chat-message__text_inbound">
                                                            <span><lightning:formattedRichText value="{!message.commentBody}"/></span>
                                                        </div>
                                                        <div class="slds-chat-message__meta" aria-label="said Andy Martinez at 4:59 PM">
                                                            {!message.commentedUserFirstName} • {!message.commentedUserLastName} • <lightning:formattedDateTime value="{!message.commentCreatedDateTime}" year="numeric" month="numeric" day="numeric" hour="2-digit"
                                            minute="2-digit" hour12="true"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                        </aura:if>
                                    </aura:iteration>
                                </div>
                            </ul>
                        </section>        
                    </div>
                    
                </div>
                <br></br>
                <div class=" slds-grid slds-gutters" >
                    <div class="slds-col slds-size_10-of-12">
                      
                           <lightning:inputRichText  value="{!v.replyValue}" variant="bottom-toolbar" aura:id="replyRichText" 
                                                     placeholder="Type something interesting" shareWithEntityId="{!v.recordId}">
                                <lightning:insertImageButton/></lightning:inputRichText>
                            
                      
                    </div>
                    <div class="slds-col slds-size_2-of-12">
                        <span>
                            <br></br><br></br><br></br><br></br><br></br><br></br>
                            <lightning:button variant="Reply" label="Reply" class="slds-button slds-button_outline-brand " title="Reply" onclick="{!c.postComments}" />
                        </span>
                    </div>
                    
                </div>
                <div class=" slds-grid slds-gutters">
                	 <div class="slds-col slds-size_1-of-1">
                       <!-- <lightning:fileUpload multiple="{!v.multiple}"
                                  aura:id="fileup"
                                  accept="{!v.accept}" 
                                  onuploadfinished="{!c.handleUploadFinishedNew}"/>-->
                         
                      <lightning:fileUpload label="Attachment"
                        name="fileUploader"
                        multiple="true"
                        accept="{!v.accept}"
                        onuploadfinished="{!c.handleUploadFinishedNew}" />
                    <div class="slds-text-body_small slds-text-color_error">{!v.fileName} </div>
                         
                    </div>
                </div>
        </span>
	
</aura:component>